<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_light">

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/blue_dark"
                app:el_duration="500"
                app:el_expanded="false"
                app:el_parallax="0.5">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minHeight="@dimen/dimen_40dp"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xlarge"/>

            </net.cachapa.expandablelayout.ExpandableLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:layout_below="@+id/expandable_layout"
                android:background="@color/white_light"
                android:scrollbars="vertical"/>

            <View
                android:id="@+id/shadow_top"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/expandable_layout"
                android:background="@drawable/below_shadow">
            </View>

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-6dp"
                android:indeterminate="true"
                android:visibility="invisible"
                app:mpb_indeterminateTint="@color/orange"
                app:mpb_progressStyle="horizontal"
                app:mpb_showProgressBackground="false"/>

            <LinearLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/copy"
                    style="@style/MenuBottomButtonStyle"
                    android:drawableTop="@drawable/ic_copy_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="Copy"/>

                <TextView
                    android:id="@+id/rename"
                    style="@style/MenuBottomButtonStyle"
                    android:drawableTop="@drawable/ic_rename_selector"
                    android:enabled="false"
                    android:text="Rename"/>

                <TextView
                    android:id="@+id/cut"
                    style="@style/MenuBottomButtonStyle"
                    android:drawableTop="@drawable/ic_cut_selector"
                    android:enabled="false"
                    android:text="Cut"/>

                <TextView
                    android:id="@+id/delete"
                    style="@style/MenuBottomButtonStyle"
                    android:drawableTop="@drawable/ic_delete_selector"
                    android:text="Delete"/>
            </LinearLayout>

            <View
                android:id="@+id/shadow_bottom"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_above="@+id/bottomBar"
                android:background="@drawable/above_shadow">
            </View>

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.design.widget.CoordinatorLayout>