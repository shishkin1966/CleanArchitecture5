<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/HelveticaTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/gray"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/setting_min_high"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_8dp"
                    android:text="Расчет"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_xlarge"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelveticaTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/setting_min_high"
                            android:paddingLeft="@dimen/dimen_12dp"
                            android:paddingRight="@dimen/dimen_8dp"
                            android:text="Слагаемое"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_large"/>

                        <EditText
                            android:id="@+id/item_edit_1"
                            style="@style/EditTextCornerStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:layout_marginRight="@dimen/dimen_8dp"
                            android:inputType="number"
                            android:textSize="@dimen/text_size_large"
                            android:minWidth="48dp"/>

                    </LinearLayout>

                    <View style="@style/HorizontalDivider"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelveticaTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/setting_min_high"
                            android:paddingLeft="@dimen/dimen_12dp"
                            android:paddingRight="@dimen/dimen_8dp"
                            android:text="Слагаемое"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_large"/>

                        <EditText
                            android:id="@+id/item_edit_2"
                            style="@style/EditTextCornerStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:layout_marginRight="@dimen/dimen_8dp"
                            android:inputType="number"
                            android:textSize="@dimen/text_size_large"
                            android:minWidth="48dp"/>

                    </LinearLayout>

                    <View style="@style/HorizontalDivider"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelveticaTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/setting_min_high"
                            android:paddingLeft="@dimen/dimen_12dp"
                            android:paddingRight="@dimen/dimen_8dp"
                            android:text="Слагаемое"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_large"/>

                        <EditText
                            android:id="@+id/item_edit_3"
                            style="@style/EditTextCornerStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:layout_marginRight="@dimen/dimen_8dp"
                            android:inputType="number"
                            android:textSize="@dimen/text_size_large"
                            android:minWidth="48dp"/>

                    </LinearLayout>

                    <View style="@style/HorizontalDivider"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelveticaTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/setting_min_high"
                            android:paddingLeft="@dimen/dimen_12dp"
                            android:paddingRight="@dimen/dimen_8dp"
                            android:text="Слагаемое"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_large"/>

                        <EditText
                            android:id="@+id/item_edit_4"
                            style="@style/EditTextCornerStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:layout_marginRight="@dimen/dimen_8dp"
                            android:inputType="number"
                            android:textSize="@dimen/text_size_large"
                            android:minWidth="48dp"/>

                    </LinearLayout>

                    <View style="@style/HorizontalDivider"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelveticaTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/setting_min_high"
                            android:paddingLeft="@dimen/dimen_12dp"
                            android:paddingRight="@dimen/dimen_8dp"
                            android:text="Слагаемое"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_large"/>

                        <EditText
                            android:id="@+id/item_edit_5"
                            style="@style/EditTextCornerStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:layout_marginRight="@dimen/dimen_8dp"
                            android:inputType="number"
                            android:textSize="@dimen/text_size_large"
                            android:minWidth="48dp"/>

                    </LinearLayout>

                    <View style="@style/HorizontalDivider"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelveticaTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/setting_min_high"
                            android:paddingLeft="@dimen/dimen_12dp"
                            android:paddingRight="@dimen/dimen_8dp"
                            android:text="Итого"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/sum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_8dp"
                            android:layout_marginRight="@dimen/dimen_8dp"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <View style="@style/HorizontalDivider"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-6dp"
            android:indeterminate="true"
            android:visibility="invisible"
            app:mpb_indeterminateTint="@color/orange"
            app:mpb_progressStyle="horizontal"
            app:mpb_showProgressBackground="false"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>